{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch server",
			"request": "launch",
			"runtimeExecutable": "bun",
			"runtimeArgs": ["run", "dev"],
			"type": "node",
			"console": "internalConsole",
			"skipFiles": ["/**"]
		},
		{
			"type": "chrome",
			"request": "launch",
			"name": "Launch Chrome",
			"url": "http://127.0.0.1:5173",
			"webRoot": "${workspaceFolder}"
		}
	],
	"compounds": [
		{
			"name": "Both",
			"configurations": ["Launch server", "Launch Chrome"]
		}
	]
}
